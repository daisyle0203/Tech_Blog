      <div class="card mb-3">
        <div class="card-header text-primary fw-bold fs-5">{{title}}
          <h6 class="text-end">Posted by {{user.name}} on {{format_date created_at}}</h6>
        </div>
        <div class="card-body">
          <p>
            {{post_text}}
          </p>
        </div>
        <h4><a class="link" href="/dashboard/edit/{{id}}">{{title}}</a></h4>
      </div>
